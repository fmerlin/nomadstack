{
  "datacenter": "{{consul.datacenter}}",
  "data_dir": "/var/lib/consul",
  "log_level": "INFO",
  "node_name": "foobar",
  "advertise_addr": "{{ ansible_default_ipv4.address }}",
  "bind_addr": "0.0.0.0",
  "client_addr": "0.0.0.0",
  "enable_syslog": true,
  "recursors": ["8.8.8.8", "208.67.222.222"],
  "bootstrap_expect": {{ groups['servers']|length }},
{% if 'servers' in group_names %}
  "server": true,
  "ui": true,
  "start_join_wan": ["{{ groups['servers'] | join('","')}}"],
{% else %}
  "start_join": ["{{ groups['servers'] | join('","')}}"],
{% endif %}
  "telemetry": {
    "prometheus_retention_time": "30s",
    "disable_hostname": true
  },
  "enable_script_checks": true,
  "check" : {
    "id": "check_node",
    "args": ["/usr/local/consul/check_node.py", "{{ consul.checks | join('","')}}"],
    "interval": "10s",
    "status": "passing"
  },
  "acl": {
      "enabled": true,
      "default_policy": "deny",
      "enable_token_persistence": true
  }
}

