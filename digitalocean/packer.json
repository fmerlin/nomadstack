{
  "_comment": "export DIGITALOCEAN_TOKEN=<Your API TOKEN>",
  "provisioners": [
    {
      "type": "ansible-local",
      "playbook_file": "playbooks/nodes/main.yml",
      "groups": ["servers"],
      "inventory_directory": "inventory/local"
    }
  ],
  "builders": [
    {
      "type": "digitalocean",
      "api_token": "{{env `DIGITALOCEAN_TOKEN`}}",
      "image": "ubuntu-18-04-x64",
      "region": "fra1",
      "size": "512mb",
      "ssh_username": "root"
    }
  ]
}